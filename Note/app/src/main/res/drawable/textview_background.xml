<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White shadow on right and bottom -->


    <item >
        <shape android:shape="rectangle">
            <solid android:color="#F9F7F9"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item  android:left="5sp" android:top="5sp">
        <shape android:shape="rectangle">
            <solid android:color="#DEDCDE"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#EFECEE"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
